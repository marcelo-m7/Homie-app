# OIDC-Only Authentication Configuration
FLASK_SECRET_KEY=change_this_to_a_random_secret_key

# OIDC Configuration - Get these from your PocketID/OIDC provider
OIDC_CLIENT_ID=your_client_id_here
OIDC_CLIENT_SECRET=your_client_secret_here
OIDC_ISSUER=https://auth.camc.xyz
OIDC_REDIRECT_URI=http://localhost:5000/auth/callback  # CHANGE THIS IN PROD TO YOUR DOMAIN

# OIDC Endpoints (for PocketID)
OIDC_AUTHORIZATION_ENDPOINT=https://auth.camc.xyz/authorize
OIDC_TOKEN_ENDPOINT=https://auth.camc.xyz/api/oidc/token
OIDC_USERINFO_ENDPOINT=https://auth.camc.xyz/api/oidc/userinfo
OIDC_END_SESSION_ENDPOINT=https://auth.camc.xyz/api/oidc/end-session

# Access Control - Group-based authentication
ALLOWED_GROUPS=homie-users,family-members
